{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/local-proxy",
      "dest": "/api/local-proxy.js"
    },
    {
      "src": "/api/sodot-proxy/(.*)",
      "dest": "/api/sodot-proxy/[...path].js?path=$1"
    },
    {
      "src": "/api/sodot-proxy",
      "dest": "/api/sodot-proxy/[...path].js"
    },
    {
      "src": "/api/adamik-proxy",
      "dest": "/api/adamik-proxy/[...path].js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
